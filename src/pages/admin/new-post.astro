---
import BaseLayout from '../../layouts/BaseLayout.astro';
import BlogEditor from '../../components/BlogEditor.jsx';

// 관리자 인증 체크 로직은 여기에 추가할 수 있습니다.
const isAuthenticated = true; // 실제 구현에서는 세션이나 쿠키를 확인해야 합니다.
---

<BaseLayout
  title="새 포스트 작성"
  description="관리자 페이지 - 새 블로그 포스트 작성"
>
  <div class="max-w-5xl mx-auto py-8">
    {isAuthenticated ? (
      <BlogEditor client:load />
    ) : (
      <div class="bg-red-100 p-6 rounded-lg">
        <h2 class="text-xl font-bold text-red-700 mb-2">접근 권한이 없습니다</h2>
        <p class="text-red-600">관리자 로그인이 필요합니다.</p>
        <a href="/admin/login" class="mt-4 inline-block px-4 py-2 bg-primary-600 text-white rounded hover:bg-primary-700">
          로그인 페이지로 이동
        </a>
      </div>
    )}
  </div>
</BaseLayout> 